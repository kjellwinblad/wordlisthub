doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='/docs/favicon.ico')
    title= title
    // Bootstrap core CSS
    link(href='/bootstrap/css/bootstrap.min.css', rel='stylesheet')
    link(rel='stylesheet', href='/stylesheets/ribbons.css')
    // Custom styles for this template
    link(href='/bootstrap/css/navbar-static-top.css', rel='stylesheet')
  body
    // Static navbar
    nav.navbar.navbar-default.navbar-static-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            |             
            span.icon-bar
            |             
            span.icon-bar
            |             
            span.icon-bar
          |           
          a.navbar-brand(href='/') WordListHub.com
        |         
        #navbar.navbar-collapse.collapse
          ul.nav.navbar-nav
              if user
                  li
                      a(href='/public_wordlists') Public Wordlists
                  li
                      a(href='/wordlists') My Wordlists
              else
                  li
                      a(href='/public_wordlists') Public Wordlists
          ul.nav.navbar-nav.navbar-right
              if user
                  li
                      a(href='/users/edit')
                          img(src='#{user.gravatar}&s=23')
                  li
                      a(href='/users/edit') #{user.username || user.email} 
                  li
                      a(href='/logout') Logout
              else
                  li
                      a(href='/') Login
          |           
        // /.nav-collapse
    .container
      // Main component for a primary marketing message or call to action
      block content
    // /container
    // HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries
    //if lt IE 9
    script(src='https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js')
    script(src='https://oss.maxcdn.com/respond/1.4.2/respond.min.js')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/javascripts/lib/jqueryui/jquery-ui.css')
    script(src='/javascripts/lib/jquery-1.11.2.min.js')
    script(src='/javascripts/lib/jqueryui/jquery-ui.min.js')
    script(src='/bootstrap/js/bootstrap.min.js')
    script(src='/bootstrap/js/ie10-viewport-bug-workaround.js')
    script(src='/javascripts/lib/underscore-min.js')
    block scripts
