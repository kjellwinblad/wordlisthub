extends layout

block content
  a.hide-for-small-only(href='https://github.com/kjellwinblad/wordlisthub')
    img(style='position: absolute; top: 45px; right: 0; border: 0;',
      src='https://camo.githubusercontent.com/365986a132ccd6a44c23a9169022c0b5c890c387/68747470733a2f2f73332e616d617a6f6e6177732e636f6d2f6769746875622f726962626f6e732f666f726b6d655f72696768745f7265645f6161303030302e706e67',
      alt='Fork me on GitHub', data-canonical-src='https://s3.amazonaws.com/github/ribbons/forkme_right_red_aa0000.png')
  .jumbotron
    h2 Welcome to <b>#{title}</b>
    br
    p
      a.btn.btn-lg.btn-primary(href='/public_wordlists', role='button') Go to <b>public</b> word lists &raquo;
    p Or
    p
      if user
        a.btn.btn-lg.btn-primary(href='/wordlists', role='button') Go to <b>your</b> word lists &raquo;
      else
        form(action="/sendtoken", method="POST")
          input(name="user", type="text", placeholder="your@email.com")
          input(name="sendMethod", type="hidden", value="email")
          input.btn.btn-default(type="submit", value="Login / Register")
        form(action="/passwordlogin", method="POST")
          input(name="user", type="text", placeholder="your@email.com")
          input(name="password", type="password")
          input(name="sendMethod", type="hidden", value="password")
          input.btn.btn-default(type="submit", value="Login")
        p to create/view/edit/practice your own word lists.
